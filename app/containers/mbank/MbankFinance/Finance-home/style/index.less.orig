@import '../../../../../style/index';
@mbankFinancingIndexTop: mbank-financing-index-top;
@mbankFinancingProductList: mbank-financing-product-list;
.@{mbankFinancingIndexTop}-text{
  padding: @v-spacing-md @h-spacing-lg;
  text-align: left;
  font-size: @font-size-caption-sm;
  & b {
    color: @number-color-red;
  }
}
.@{mbankFinancingIndexTop} {
  min-height: 168px;
  background:@fill-base url(../image/bg-finance@3x.png);
  background-size: 100% 100%;
  padding: @v-spacing-sm @v-spacing-lg 0 @v-spacing-lg;
  &-link {
    display: -webkit-box;      display: -webkit-flex;     display: flex;     display: -webkit-box;      display: -webkit-flex; 
    & div {
      flex: 1;  -webkit-box-flex: 1;  -webkit-flex: 1; 
      text-align: center;
      > .ryt-icon {
        width: 70px;
        height: 100px;
      }
      > p{
        padding-top: 10px;
      }
    }
  }
  &-button {
    padding-top: @v-spacing-md;
    text-align: center;
    >.ryt-icon {
      transform: rotate(90deg);
    }
  }
}
.@{mbankFinancingProductList} {
  background: @fill-base;
  &-item {
    display: -webkit-box;      display: -webkit-flex;     display: flex;     display: -webkit-box;      display: -webkit-flex; 
    padding: @v-spacing-lg 40px ;
    -webkit-box-align: center; -webkit-align-items: center; -webkit-box-align: center; -webkit-align-items: center; align-items: center; -webkit-box-align: center; -webkit-align-items: center;

    & .title {
      padding-right: 40px;
      text-align: center;
      & p {
        color: @number-color-red;
        font-size: 60px;
        line-height: 60px;
        & span {
          color: @number-color-red;
          padding-left: 5px;
          font-size: @font-size-base;
        }
      }
      & span {
        color: @color-text-caption;
        font-size: @font-size-caption-sm;
      }
    }
    & .title2 {
      flex: 1;  -webkit-box-flex: 1;  -webkit-flex: 1; 
      text-align: left;
      & div {
        color: @color-text-base;
        font-size: @font-size-heading;
      }
      & p {
        padding: @v-spacing-md 0;
        color: @color-text-base;
        font-size:@font-size-caption-sm;
      }
      & b {
        margin-right: @h-spacing-sm;
        color:@color-text-caption;
        font-weight: 100;
        font-size: @font-size-caption-sm;
      }
      & span {
        color:@color-text-caption;
        font-size: @font-size-caption-sm;
        margin-right: @h-spacing-sm;
      }
    }
  }
  >div:not(:last-child) {
    border-bottom: @border-width-sm solid @border-color-base;
  }
}
